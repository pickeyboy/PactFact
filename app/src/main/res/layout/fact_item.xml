<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/fact_row_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FactTitleBlue.70px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fact_row_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/FactDescriptionBlack.45px"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/fact_row_image_iv"/>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/fact_row_image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>